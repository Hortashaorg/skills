{
	"componentTypes": {
		"badge": {
			"description": "Labels for status, counts, or categories",
			"props": {
				"role": {
					"type": "\"status\" | \"note\" | \"mark\"",
					"description": "Semantic role for the badge",
					"guidance": "Use 'status' for live updates (notification counts), 'note' for static labels, 'mark' for highlighting"
				},
				"aria-label": {
					"type": "string",
					"description": "Accessible label for screen readers when badge content isn't descriptive",
					"guidance": "Required when badge shows only icons or numbers (e.g., aria-label=\"5 unread messages\")"
				},
				"aria-hidden": {
					"type": "boolean",
					"description": "Hide badge from screen readers when purely decorative",
					"guidance": "Use when badge has no semantic meaning"
				}
			}
		},
		"button": {
			"description": "Interactive button element",
			"props": {
				"type": {
					"type": "\"button\" | \"submit\" | \"reset\"",
					"description": "Button type attribute",
					"guidance": "Always specify to prevent accidental form submission"
				},
				"aria-label": {
					"type": "string",
					"description": "Accessible label for icon-only buttons",
					"guidance": "Required when button has no text content"
				},
				"aria-pressed": {
					"type": "boolean",
					"description": "Indicates toggle button state",
					"guidance": "Use for buttons that can be pressed/unpressed"
				},
				"aria-expanded": {
					"type": "boolean",
					"description": "Indicates if button controls expandable content",
					"guidance": "Use for buttons that toggle menus, dropdowns, etc."
				},
				"disabled": {
					"type": "boolean",
					"description": "Disables button interaction",
					"guidance": "Automatically sets aria-disabled"
				}
			},
			"events": ["onClick", "onFocus", "onBlur"]
		},
		"link": {
			"description": "Navigation link",
			"props": {
				"href": {
					"type": "string",
					"description": "Link destination",
					"guidance": "Required for links"
				},
				"target": {
					"type": "\"_blank\" | \"_self\" | \"_parent\" | \"_top\"",
					"description": "Link target",
					"guidance": "Use _blank for external links"
				},
				"rel": {
					"type": "string",
					"description": "Link relationship",
					"guidance": "Use 'noopener noreferrer' with target=_blank"
				},
				"aria-label": {
					"type": "string",
					"description": "Accessible label when link text isn't descriptive",
					"guidance": "Use for icon-only links or 'Read more' links"
				}
			},
			"events": ["onClick"]
		},
		"input": {
			"description": "Text input field",
			"props": {
				"type": {
					"type": "\"text\" | \"email\" | \"password\" | \"number\" | \"tel\" | \"url\" | \"search\"",
					"description": "Input type",
					"guidance": "Choose appropriate type for validation"
				},
				"aria-label": {
					"type": "string",
					"description": "Label when no visible label element",
					"guidance": "Required if no associated <label>"
				},
				"aria-required": {
					"type": "boolean",
					"description": "Indicates required field",
					"guidance": "Use with required attribute"
				},
				"aria-invalid": {
					"type": "boolean",
					"description": "Indicates validation error",
					"guidance": "Set to true when field has error"
				},
				"aria-describedby": {
					"type": "string",
					"description": "ID of error/help text",
					"guidance": "Link to error message or description"
				},
				"disabled": {
					"type": "boolean",
					"description": "Disables input",
					"guidance": "Use sparingly - prefer readonly"
				},
				"readonly": {
					"type": "boolean",
					"description": "Makes input read-only",
					"guidance": "Better than disabled for visible but unchangeable fields"
				}
			},
			"events": ["onInput", "onChange", "onFocus", "onBlur"]
		},
		"card": {
			"description": "Container for content",
			"props": {
				"role": {
					"type": "\"article\" | \"region\" | \"group\"",
					"description": "Semantic role for card",
					"guidance": "Use 'article' for standalone content, 'region' for major sections, 'group' for grouped items"
				},
				"aria-label": {
					"type": "string",
					"description": "Label for card when role is region",
					"guidance": "Required when using role=region"
				}
			}
		},
		"alert": {
			"description": "Alert or notification message",
			"props": {
				"role": {
					"type": "\"alert\" | \"status\"",
					"description": "Alert role",
					"guidance": "Use 'alert' for important messages, 'status' for live updates"
				},
				"aria-live": {
					"type": "\"polite\" | \"assertive\"",
					"description": "Screen reader announcement priority",
					"guidance": "'assertive' for critical alerts, 'polite' for informational"
				}
			}
		},
		"modal": {
			"description": "Modal dialog",
			"props": {
				"role": {
					"type": "\"dialog\" | \"alertdialog\"",
					"description": "Modal role",
					"guidance": "Use 'alertdialog' for confirmation modals"
				},
				"aria-modal": {
					"type": "boolean",
					"description": "Indicates modal behavior",
					"guidance": "Should be true for modals"
				},
				"aria-labelledby": {
					"type": "string",
					"description": "ID of modal title",
					"guidance": "Link to modal heading"
				},
				"aria-describedby": {
					"type": "string",
					"description": "ID of modal description",
					"guidance": "Link to modal content description"
				}
			}
		},
		"icon": {
			"description": "Icon element",
			"props": {
				"aria-hidden": {
					"type": "boolean",
					"description": "Hide decorative icons from screen readers",
					"guidance": "Set to true for decorative icons next to text"
				},
				"aria-label": {
					"type": "string",
					"description": "Label for standalone icons",
					"guidance": "Required for icons without adjacent text"
				},
				"role": {
					"type": "\"img\"",
					"description": "Image role for semantic icons",
					"guidance": "Use with aria-label for meaningful icons"
				}
			}
		}
	},
	"generalGuidance": {
		"alwaysInclude": [
			{
				"prop": "children",
				"type": "JSX.Element",
				"description": "Component children"
			},
			{
				"prop": "class",
				"type": "string",
				"description": "Additional CSS classes"
			}
		],
		"interactiveComponents": {
			"description": "Components that respond to user interaction",
			"commonEvents": ["onClick", "onFocus", "onBlur", "onKeyDown"],
			"commonProps": ["disabled", "aria-label"]
		},
		"formComponents": {
			"description": "Form input components",
			"commonEvents": ["onInput", "onChange", "onFocus", "onBlur"],
			"commonProps": [
				"disabled",
				"readonly",
				"required",
				"aria-required",
				"aria-invalid",
				"aria-describedby"
			]
		}
	}
}
