{
	"lsp": {
		"vtsls": {
			"initialization_options": {
				"typescript": {
					"tsdk": "node_modules/typescript/lib"
				},
				"vtsls": {
					"autoUseWorkspaceTsdk": true
				}
			},
			"settings": {
				"vtsls": {
					"autoUseWorkspaceTsdk": true
				},
				"typescript": {
					"tsdk": "node_modules/typescript/lib",
					"tsserver": {
						"maxTsServerMemory": 8192
					},
					"preferences": {
						"includePackageJsonAutoImports": "on"
					}
				}
			}
		},
		"tailwindcss-language-server": {
			"settings": {
				"classFunctions": ["tw", "cva", "clsx", "cn"],
				"experimental": {
					"classRegex": ["\\bclass:\\s*['\"]([^'\"]*)['\"]"]
				}
			}
		},
		"vscode-css-language-server": {
			"settings": {
				"css": {
					"lint": {
						"unknownAtRules": "ignore"
					}
				}
			}
		}
	},
	"languages": {
		"JavaScript": {
			"formatter": { "language_server": { "name": "biome" } },
			"code_actions_on_format": {
				"source.fixAll.biome": true,
				"source.organizeImports.biome": true
			}
		},
		"TypeScript": {
			"language_servers": ["vtsls", "!tsgo", "!deno", "!typescript-language-server", "..."],
			"formatter": { "language_server": { "name": "biome" } },
			"code_actions_on_format": {
				"source.fixAll.biome": true,
				"source.organizeImports.biome": true
			}
		},
		"TSX": {
			"language_servers": ["vtsls", "!tsgo", "!deno", "!typescript-language-server", "..."],
			"formatter": { "language_server": { "name": "biome" } },
			"code_actions_on_format": {
				"source.fixAll.biome": true,
				"source.organizeImports.biome": true
			}
		},
		"JSON": { "formatter": { "language_server": { "name": "biome" } } },
		"JSONC": { "formatter": { "language_server": { "name": "biome" } } },
		"CSS": { "formatter": { "language_server": { "name": "biome" } } }
	}
}
