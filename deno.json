{
    "workspace": ["./app", "./packages/database"],
    "nodeModulesDir": "auto",
    "imports": {
        "@std/fs": "jsr:@std/fs@^1.0.18",
        "@std/path": "jsr:@std/path@^1.1.0"
    },
    "compilerOptions": {
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "noUncheckedIndexedAccess": true
    },
    "tasks": {
        "db:generate": "deno run -A scripts/task.ts '@package/database' generate",
        "db:migrate": "deno run -A scripts/task.ts '@package/database' migrate",
        "zero:generate": "deno run -A scripts/task.ts '@package/database' zero:generate"
    }
}
